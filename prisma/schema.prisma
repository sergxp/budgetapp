// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "postgres"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "foreignKeys"
}

model BudgetDay {
  id                    String                  @id @unique @default(uuid()) @db.Uuid
  day                   DateTime
  runningTotal          Decimal?
  user                  User                    @relation(fields: [userId], references: [id])
  userId                Int
  recurringTransactions RecurringTransactions[]
}

model User {
  id                    Int                     @id @unique @default(autoincrement())
  firstName             String
  lastName              String
  email                 String
  BudgetDays            BudgetDay[]
  runningTotals         RunningTotalEntry[]
  recurringTransactions RecurringTransactions[]
}

model RecurringTransactions {
  id          String     @id @unique @default(uuid()) @db.Uuid
  amount      Decimal    @db.Money
  name        String
  BudgetDay   BudgetDay? @relation(fields: [budgetDayId], references: [id])
  budgetDayId String?    @db.Uuid
  userId      Int
  user        User       @relation(fields: [userId], references: [id])
}

model RunningTotalEntry {
  id          String   @id @unique @default(uuid()) @db.Uuid
  amount      Decimal  @db.Money
  isBeginning Boolean
  date        DateTime
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}
